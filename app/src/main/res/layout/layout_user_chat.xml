<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/recipient_rounded_corners"
        android:layout_gravity="left"
        android:orientation="vertical"
        android:id="@+id/linear_layout_receiver">

        <TextView
            android:id="@+id/text_view_recipient_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="14sp"
            android:text="Hi.How are you doing?"
            android:layout_gravity="end">
            <requestFocus />
        </TextView>

        <TextView
            android:id="@+id/time_recipient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:text="time"
            android:visibility="gone"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sender_rounded_corners"
        android:layout_gravity="end"
        android:orientation="vertical"
        android:id="@+id/linear_layout_sender">

        <TextView
            android:id="@+id/text_view_sender_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="I am doing ok"
            android:layout_gravity="end">
            <requestFocus />
        </TextView>

        <TextView
            android:id="@+id/time_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:text="time"
            android:textColor="@color/white"
            android:visibility="gone"
            />

    </LinearLayout>



</LinearLayout>